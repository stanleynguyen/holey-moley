<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b8b44e"
    tools:context="zouyun.com.example.whackamole.TabsActivity">

    <TextView
        android:text="SHOP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/inventorytxt"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_below="@+id/inventorytxt">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            app:srcCompat="@drawable/shop_item"
            android:id="@+id/itemLeft"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@null"
            android:paddingRight="8dp"
            android:layout_weight="0.5" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            app:srcCompat="@drawable/shop_item"
            android:id="@+id/itemRight"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@null"
            android:paddingLeft="8dp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/game_freeze"
        android:id="@+id/freezeicon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/inventorytxt" />

    <TextView
        android:text="LEVEL 2\n300 COINS"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/freezetxt"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/freezeicon"
        android:layout_alignEnd="@+id/freezeicon"
        android:textSize="20dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/game_bomb"
        android:layout_alignBottom="@+id/freezeicon"
        android:id="@+id/bombicon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/inventorytxt" />

    <TextView
        android:text="LEVEL 1\n500 COINS"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/bombtxt"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/bombicon"
        android:layout_alignEnd="@+id/bombicon"
        android:textSize="20dp"/>




